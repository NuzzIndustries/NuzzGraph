<UserControl x:Class="NuzzGraph.Viewer.UserControls.Page1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NuzzGraph.Viewer.UserControls"
             mc:Ignorable="d" Height="595.5" Width="665.95">
        <Grid Name="grid" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170" MinWidth="170"/>
            <ColumnDefinition />
            <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
        <TreeView Grid.Column="0" Name="treeView" VerticalAlignment="Top" />
        <ScrollBar Grid.Column="0" VerticalAlignment="Bottom" Orientation="Horizontal" />
        <GridSplitter Width="5" Background="Black" Grid.Column="1" />
        <Canvas Grid.Column="2" x:Name="drawingArea" Background="Gray" ClipToBounds="True">
            <local:MyVisualHost x:Name="host" />
        </Canvas>

    </Grid>

</UserControl>
