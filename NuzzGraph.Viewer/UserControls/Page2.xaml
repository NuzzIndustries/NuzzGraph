<UserControl x:Class="NuzzGraph.Viewer.UserControls.Page2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:local="clr-namespace:NuzzGraph.Viewer.UserControls"
             mc:Ignorable="d">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TreeView Name="treeView" VerticalAlignment="Top"  />
        <GridSplitter Width="5" Background="Black" Grid.Column="1" />
        <Canvas Grid.Column="2" x:Name="drawingArea" Background="Gray" >
            <local:MyVisualHost x:Name="host" />
        </Canvas>
        <!--<TreeView Name="treeView" VerticalAlignment="Top"  Margin="{StaticResource SplitLeft}" />
        <Canvas Grid.Column="1" x:Name="drawingArea" Background="Gray" Margin="{StaticResource SplitRight}">
            <local:MyVisualHost x:Name="host" />
        </Canvas>-->
    </Grid>
</UserControl>
